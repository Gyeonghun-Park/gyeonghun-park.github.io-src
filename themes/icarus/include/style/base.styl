bulma-stylus-root = '../../../../node_modules/bulma-stylus/stylus'

/* ---------------------------------
 *   Override Bulma CSS Framework
 * --------------------------------- */
$body-size ?= 14px
$body-background-color ?= #fff

$family-sans-serif ?=  'Nanum Gothic', Ubuntu, Roboto, 'Open Sans', 'Microsoft YaHei', sans-serif;
$family-code ?= 'Source Code Pro', monospace, 'Microsoft YaHei'

$size-7 ?= .75rem
$size-small ?= .75rem

$primary ?= $blue
$custom-colors ?= {
    grey-lightest: {
        '1': $grey-lightest
        '2': $grey-darker
    }
}

$navbar-item-active-color ?= $primary
$footer-background-color ?= $scheme-main

$gap ?= 16px
$tablet ?= 769px
$desktop ?= 1288px
$widescreen ?= 1480px
$fullhd ?= 1672px

$shadow ?= 0 4px 10px rgba(0, 0, 0, 0.05)

$title-weight ?= $weight-normal

$control-height ?= 2.25em
$button-padding-vertical ?= calc(0.375em - 1px)

$card-radius ?= $radius
$card-media-margin ?= 0.75rem
$card-shadow ?= none

$menu-item-active-color ?= $link
$menu-item-active-background-color ?= hsl(219, 70%, 96%)

$content-heading-weight ?= $weight-normal


$logo-height ?= 1.75rem

// FIXME: https://github.com/groenroos/bulma-stylus/issues/11
@import bulma-stylus-root + '/utilities/initial-variables'
@import bulma-stylus-root + '/utilities/functions'
@import bulma-stylus-root + '/utilities/derived-variables'

$colors = merge($colors, $custom-colors)

@import bulma-stylus-root + '/utilities/animations'
@import bulma-stylus-root + '/utilities/mixins'
@import bulma-stylus-root + '/utilities/controls'
@import bulma-stylus-root + '/base/_all'
@import bulma-stylus-root + '/components/_all'
@import bulma-stylus-root + '/elements/_all'
@import bulma-stylus-root + '/form/_all'
@import bulma-stylus-root + '/grid/_all'
@import bulma-stylus-root + '/layout/_all'

html
    height: 100%
    -webkit-text-size-adjust: 100%
    -moz-text-size-adjust: 100%
    -ms-text-size-adjust: 100%
    text-size-adjust: 100%

body
    min-height: 100%
    display: flex
    flex-direction: column

body > .section
    flex-grow: 1

[data-color-scheme="dark"]
    color-scheme dark

[data-color-scheme="light"]
    color-scheme light
body
    & > section
        & > div
            & > div
                & > div
                    &.column
                        & > div
                            &:nth-child(1)
                                & > div
                                    & > div
                                        &.level
                                            &:nth-child(3)
                                                display none

.column-main
    position relative
    &::before
        content ''
        border-left 1px solid #e5e5e5
        left 0
        min-height 100%
        width 100%
        position absolute
        top -30px

@media screen and (max-width: 769px)
    .column-left
        &::before
            display none

.column-main
    .card
        border-bottom 1px solid #e5e5e5
        margin-bottom 40px
        border-radius 0

.pagination-list
    li
        & > a
            box-shadow 0 1px 0 0 #e5e5e5 !important

.pagination-list > li > a,
.pagination .pagination-previous,
.pagination .pagination-next
    box-shadow 0 1px 0 0 #e5e5e5, 0 0 1px rgba(0,0,0,0.1) !important
    transition all 0.2s ease

.pagination-list > li > a:hover,
.pagination .pagination-previous:hover,
.pagination .pagination-next:hover
    background-color #3273dc
    color #fff !important

.pagination-list > li > a:hover a,
.pagination .pagination-previous:hover a,
.pagination .pagination-next:hover a
    color inherit

#back-to-top
    box-shadow 0 1px 0 0 #e5e5e5, 0 0 1px rgba(0,0,0,0.1) !important

.searchbox-input
    background #fafafa !important

.searchbox-body
    background-color #fff !important
    padding 10px 20px
    .searchbox-result-preview
        font-size small

button
    &.navbar-item
        background none
        outline none
        border none
        cursor pointer

.utterances
    max-width none

.article-licensing
    .licensing-title
        p
            &:not(:last-child)
                margin-bottom 0.25rem !important
                
+desktop()
    ::-webkit-scrollbar
        width: 8px
        height: 8px

    ::-webkit-scrollbar-track
        border-radius: 3px
        background: rgba(0,0,0,0.06)
        box-shadow: inset 0 0 5px rgba(0,0,0,0.1)

    ::-webkit-scrollbar-thumb
        border-radius: 3px
        background: rgba(0,0,0,0.12)
        box-shadow: inset 0 0 10px rgba(0,0,0,0.2)

    ::-webkit-scrollbar-thumb:hover
        background: rgba(0,0,0,0.24)
