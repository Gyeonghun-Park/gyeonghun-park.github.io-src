body
    &.dark
        background-color #1e1e1e
        hr
            background-color #3c3c3c
        .navbar
            background-color #3c3c3c
            color #d4d4d4
            .navbar-menu
                background-color transparent !important
                .navbar-item
                    color inherit
                    &.is-active
                        color #007acc
                        &:hover
                            background-color transparent
        .navbar-main
            box-shadow none
        .card
            background-color transparent
            color #d4d4d4
        .column-main
            &::before
                border-left 1px solid #3c3c3c
            .card
                border-bottom 1px solid #3c3c3c
        .title
            color #fff
        .menu-list
            a
                color #d4d4d4
                &.is-active
                    background-color #37373d
                &:hover
                    background-color #37373d
        .tag
            &:not(body)
                background-color transparent
                color #bbb
                border 1px solid rgba(55,55,61,0.6)
            &:not(body).is-grey-lightest
                background-color #37373d
        .footer
            background-color #333
            color #ccc
        #back-to-top
            background-color rgba(55,55,61,0.6)
        a
            color #007acc
            &:hover
                color #569cd6
        strong
            color #16825d
        .tab-conversation
            &.active
                & > a
                    color #fff
        .content
            blockquote
                color #dcdcdc
                background-color #252526
        code
            color #d16969
        article
            &.article
                .content
                    img
                        border 1px solid #37373d
        .searchbox
            .searchbox-body
                background-color #252526 !important
                border-top none
            .searchbox-header
                background-color #707070
            .searchbox-input
                background-color inherit !important
                color #fff
            .searchbox-close
                color #f44747
                &:hover
                    background-color #7b7b7b
            .searchbox-result-item
                &:not(.disabled):not(.active):not(:active):hover
                    background-color #37373d
                em
                    background-color #663719
                    color #fff
                    padding 5px 3px
                    box-sizing content-box
            a
                color #fff
        .breadcrumb
            li
                &.is-active
                    a
                        color #d4d4d4

body.dark .navbar .navbar-menu .navbar-item:hover,
body.dark .navbar .navbar-menu .navbar-item:focus
    background-color #37373d
    color #007acc

body.dark .content h1,
body.dark .content h2,
body.dark .content h3,
body.dark .content h4,
body.dark .content h5,
body.dark .content h6
    color #d4d4d4

body.dark .pagination .pagination-link,
body.dark .pagination .pagination-previous,
body.dark .pagination .pagination-next,
body.dark .pagination a
    background-color transparent
    color #bbb
    border 1px solid rgba(55,55,61,0.6)

body.dark .pagination .pagination-link.is-current,
body.dark .pagination .pagination-previous.is-current,
body.dark .pagination .pagination-next.is-current,
body.dark .pagination a.is-current
    color #369432
    border 1px solid rgba(55,55,61,0.6)

body.dark .pagination .pagination-link.is-current:hover,
body.dark .pagination .pagination-previous.is-current:hover,
body.dark .pagination .pagination-next.is-current:hover,
body.dark .pagination a.is-current:hover
    color #369432 !important

body.dark .pagination-list li > a,
body.dark .pagination .pagination-link,
body.dark .pagination .pagination-previous,
body.dark .pagination .pagination-next
    box-shadow none !important